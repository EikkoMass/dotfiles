@theme "/dev/null"

* {
	bg: #221c2e;
	background-color: @bg;
}


configuration {
	show-icons: true;
	icon-theme: "Papirus";
	size: 1.65ch ;
	location: 0;
	font: "JetBrainsMono Nerd Font 12";	
	display-drun: "Launch:";
}

window { 
	width: 45%;
	transparency: "real";
	orientation: vertical;
	border-color: #000000;
}

mainbox {
	children: [inputbar, listview];
}


// ELEMENT
// -----------------------------------

element {
	padding: 4 12;
	text-color: #EFE7DD;
}

element selected {
	background-color: #191522;
	border-radius: 10px;
}

element-text {
	background-color: inherit;
	text-color: inherit;
}

element-icon {
	size: 36 px;
	background-color: inherit;
	padding: 0 6 0 0;
	alignment: vertical;
}

listview {
	columns: 1;
	lines: 5;
	padding: 8 0;
	fixed-height: true;
	fixed-columns: true;
	fixed-lines: true;
	border: 0 10 6 10;
	align-items: center;
	vertical-align: 1;
	position: center;
}

// INPUT BAR 
//------------------------------------------------

entry {
	text-color: #EFE7DD;
	padding: 10 10 0 0;
	margin: 0 -2 0 0;
}

inputbar {
	background-image: url("~/Images/liquid.jpg", width);
	padding: 20 0 0;
	margin: 0 0 0 0;
} 

prompt {
	text-color: #aaffaa;
	padding: 10 12 0 10;
	margin: 0 -2 0 0;
}













